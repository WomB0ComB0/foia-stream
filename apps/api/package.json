{
  "name": "@foia-stream/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir dist --target bun",
    "start": "bun run index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed:agencies": "bun run src/db/seed-agencies.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@foia-stream/shared": "workspace:*",
    "@hono/zod-openapi": "^1.2.0",
    "@scalar/hono-api-reference": "^0.9.30",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.5.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "effect": "^3.19.13",
    "hono": "^4.11.1",
    "hono-pino": "^0.10.3",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "pdf-lib": "^1.17.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "stoker": "^2.0.1",
    "ua-parser-js": "^2.0.7"
  },
  "devDependencies": {
    "@foia-stream/typescript-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "vitest": "^4.0.16"
  }
}
