---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Streamline your Freedom of Information Act requests with FOIA Stream' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0c0f" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | FOIA Stream</title>

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- View Transitions API -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body class="min-h-screen bg-surface-950 text-surface-100 antialiased">
    <slot />
  </body>
</html>
