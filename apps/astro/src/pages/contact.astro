---
import Header from '@/components/Header.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Support">
  <Header />

  <main class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold text-surface-100">Contact Support</h1>
      <p class="mt-4 text-lg text-surface-400">
        We're here to help with any questions about FOIA Stream
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Contact Options -->
      <div class="lg:col-span-1 space-y-4">
        <div class="rounded-xl border border-surface-800 bg-surface-900/50 p-6">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent-500/10">
            <svg class="h-6 w-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-semibold text-surface-100">Email Support</h3>
          <p class="mt-1 text-sm text-surface-400">For general inquiries</p>
          <a href="mailto:support@foiastream.com" class="mt-3 inline-block text-accent-400 hover:text-accent-300">
            support@foiastream.com
          </a>
        </div>

        <div class="rounded-xl border border-surface-800 bg-surface-900/50 p-6">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-500/10">
            <svg class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-surface-100">Help Center</h3>
          <p class="mt-1 text-sm text-surface-400">Browse our knowledge base</p>
          <a href="/faq" class="mt-3 inline-block text-accent-400 hover:text-accent-300">
            View FAQ →
          </a>
        </div>

        <div class="rounded-xl border border-surface-800 bg-surface-900/50 p-6">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-purple-500/10">
            <svg class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-semibold text-surface-100">Documentation</h3>
          <p class="mt-1 text-sm text-surface-400">API docs and guides</p>
          <a href="https://github.com/WomB0ComB0/foia-stream" target="_blank" rel="noopener noreferrer" class="mt-3 inline-block text-accent-400 hover:text-accent-300">
            View on GitHub →
          </a>
        </div>

        <div class="rounded-xl border border-amber-500/30 bg-amber-500/5 p-6">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-amber-500/10">
            <svg class="h-6 w-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="font-semibold text-surface-100">Security Issues</h3>
          <p class="mt-1 text-sm text-surface-400">Report vulnerabilities</p>
          <a href="mailto:security@foiastream.com" class="mt-3 inline-block text-amber-400 hover:text-amber-300">
            security@foiastream.com
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="rounded-2xl border border-surface-800 bg-surface-900/50 p-6 sm:p-8">
          <h2 class="mb-6 text-xl font-semibold text-surface-100">Send us a message</h2>

          <form id="contact-form" class="space-y-6">
            <div id="success-message" class="hidden rounded-lg border border-emerald-500/30 bg-emerald-500/10 p-4">
              <div class="flex items-start gap-3">
                <svg class="h-5 w-5 shrink-0 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="font-medium text-emerald-400">Message sent successfully!</p>
                  <p class="mt-1 text-sm text-emerald-400/70">We'll get back to you within 24-48 hours.</p>
                </div>
              </div>
            </div>

            <div id="form-fields">
              <div class="grid gap-6 sm:grid-cols-2">
                <div>
                  <label for="name" class="block text-sm font-medium text-surface-300">
                    Your Name <span class="text-red-400">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="mt-2 block w-full rounded-lg border border-surface-700 bg-surface-800 px-4 py-3 text-surface-100 placeholder-surface-500 transition-colors focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500"
                    placeholder="John Doe"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-surface-300">
                    Email Address <span class="text-red-400">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="mt-2 block w-full rounded-lg border border-surface-700 bg-surface-800 px-4 py-3 text-surface-100 placeholder-surface-500 transition-colors focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500"
                    placeholder="you@example.com"
                  />
                </div>
              </div>

              <div class="mt-6">
                <label for="category" class="block text-sm font-medium text-surface-300">
                  Category
                </label>
                <select
                  id="category"
                  name="category"
                  class="mt-2 block w-full rounded-lg border border-surface-700 bg-surface-800 px-4 py-3 text-surface-100 transition-colors focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500"
                >
                  <option value="general">General Inquiry</option>
                  <option value="technical">Technical Support</option>
                  <option value="billing">Account & Billing</option>
                  <option value="foia">FOIA Request Help</option>
                  <option value="feature">Feature Request</option>
                  <option value="bug">Bug Report</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="mt-6">
                <label for="subject" class="block text-sm font-medium text-surface-300">
                  Subject <span class="text-red-400">*</span>
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  class="mt-2 block w-full rounded-lg border border-surface-700 bg-surface-800 px-4 py-3 text-surface-100 placeholder-surface-500 transition-colors focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500"
                  placeholder="Brief description of your inquiry"
                />
              </div>

              <div class="mt-6">
                <label for="message" class="block text-sm font-medium text-surface-300">
                  Message <span class="text-red-400">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="mt-2 block w-full resize-none rounded-lg border border-surface-700 bg-surface-800 px-4 py-3 text-surface-100 placeholder-surface-500 transition-colors focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500"
                  placeholder="Please describe your issue or question in detail..."
                ></textarea>
                <p class="mt-2 text-xs text-surface-500">
                  Include any relevant details like request IDs, error messages, or steps to reproduce issues.
                </p>
              </div>

              <div class="mt-6">
                <label class="flex items-start gap-3">
                  <input
                    type="checkbox"
                    id="consent"
                    name="consent"
                    required
                    class="mt-1 h-4 w-4 rounded border-surface-600 bg-surface-800 text-accent-500 focus:ring-accent-500 focus:ring-offset-surface-900"
                  />
                  <span class="text-sm text-surface-400">
                    I agree to the <a href="/privacy" class="text-accent-400 hover:text-accent-300">Privacy Policy</a> and consent to FOIA Stream contacting me regarding this inquiry.
                  </span>
                </label>
              </div>

              <button
                type="submit"
                id="submit-btn"
                class="mt-6 flex w-full items-center justify-center gap-2 rounded-lg bg-accent-500 px-6 py-3 text-sm font-semibold text-surface-950 transition-all hover:bg-accent-400 disabled:cursor-not-allowed disabled:opacity-50"
              >
                <span id="btn-text">Send Message</span>
                <svg id="btn-spinner" class="hidden h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>

        <!-- Response time -->
        <div class="mt-6 rounded-xl border border-surface-800 bg-surface-900/50 p-4">
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-surface-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-sm font-medium text-surface-200">Average Response Time</p>
              <p class="text-xs text-surface-500">We typically respond within 24-48 business hours</p>
            </div>
          </div>
        </div>

        <!-- Demo notice -->
        <div class="mt-4 rounded-lg border border-amber-500/30 bg-amber-500/10 p-4">
          <div class="flex items-start gap-3">
            <svg class="h-5 w-5 shrink-0 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="text-sm font-medium text-amber-400">Demo Mode</p>
              <p class="mt-1 text-xs text-amber-400/70">
                Email service not configured. In production, this form would send a support ticket.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnSpinner = document.getElementById('btn-spinner') as unknown as SVGElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const formFields = document.getElementById('form-fields') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    submitBtn.disabled = true;
    btnText.textContent = 'Sending...';
    btnSpinner.classList.remove('hidden');

    // Simulate API call (placeholder)
    await new Promise(resolve => setTimeout(resolve, 1500));

    // Show success
    formFields.classList.add('hidden');
    successMessage.classList.remove('hidden');

    // Reset button
    submitBtn.disabled = false;
    btnText.textContent = 'Send Message';
    btnSpinner.classList.add('hidden');
  });
</script>
