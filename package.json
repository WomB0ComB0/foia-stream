{
  "name": "foia-stream",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "db:generate": "turbo run db:generate --filter=@foia-stream/api",
    "db:migrate": "turbo run db:migrate --filter=@foia-stream/api",
    "db:push": "turbo run db:push --filter=@foia-stream/api",
    "db:studio": "turbo run db:studio --filter=@foia-stream/api",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=20"
  }
}
